{
  "name": "browserify-persist-fs",
  "version": "1.0.0",
  "description": "Efficient and stable persistent cache for browserify",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run coverage",
    "lint": "./node_modules/.bin/standard",
    "unit": "npm run unit:clean && npm run unit:only",
    "coverage": "npm run unit:clean && npm run unit:coverage",
    "unit:coverage": "./node_modules/.bin/tap --coverage -- test/*.js",
    "unit:clean": "rm -rf $(find .test -maxdepth 1 -type d | grep .test/)",
    "unit:only": "./node_modules/.bin/tap -- test/*.js"
  },
  "keywords": [
    "browserify",
    "cache",
    "fs",
    "persistant",
    "fast"
  ],
  "author": "Martin Heidegger <martin.heidegger@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "bluebird": "^3.4.7",
    "module-deps": "^4.0.8",
    "standard": "^8.6.0",
    "tap": "^10.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinheidegger/browserify-persist-fs.git"
  },
  "bugs": {
    "url": "https://github.com/martinheidegger/browserify-persist-fs/issues"
  },
  "homepage": "https://github.com/martinheidegger/browserify-persist-fs#readme"
}
